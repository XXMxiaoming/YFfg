	WHERE
		user_id IN 
	<foreach collection="list" item="item" index="index" open="(" close=")" separator="," >
		#{item}
	</foreach>	 
	 ORDER BY T.publish_time DESC
		LIMIT #{pageCount},#{pageSize}
  </select>
  
  
